{
  "version": "2.0.0",
  "tasks": [
    {
        "label": "Run Dev Environment",
        "dependsOrder": "parallel",
        "dependsOn": [
            "Redis",
            "Celery",
            "Dash"
        ],
        "problemMatcher": []
    },
    {
        "label": "Redis",
        "type": "shell",
        "command": "wsl docker compose -f .devtools/docker-compose.yml up",
        "options": {
            "cwd": "${workspaceFolder}",
            "shell": {
                "executable": "powershell.exe"
            }
        },
        "presentation": {
            "echo": true,
            "reveal": "always",
            "panel": "new"
        },
        "problemMatcher": []
    },
    {
        "label": "Celery",
        "type": "shell",
        "command": "./.venv/Scripts/activate; cd src; python -m celery -A backend.jobqueue.worker worker --loglevel=info --pool=solo",
        "options": {
            "cwd": "${workspaceFolder}",
            "shell": {
                "executable": "powershell.exe"
            }
        },
        "presentation": {
            "echo": true,
            "reveal": "always",
            "panel": "new"
        },
        "problemMatcher": []
    },
    {
        "label": "Dash",
        "type": "shell",
        "command": "./.venv/Scripts/activate; cd src; python -m app",
        "options": {
            "cwd": "${workspaceFolder}",
            "shell": {
                "executable": "powershell.exe"
            }
        },
        "presentation": {
            "echo": true,
            "reveal": "always",
            "panel": "new"
        },
        "problemMatcher": []
    }
]
}